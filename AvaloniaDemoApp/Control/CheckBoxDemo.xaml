<UserControl xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Gap="10">
        <CheckBox IsChecked="True">CheckBox 1</CheckBox>
        <CheckBox IsChecked="False">CheckBox 2</CheckBox>
        <CheckBox IsChecked="{x:Null}" IsThreeState="True">CheckBox 3</CheckBox>
    </StackPanel>
</UserControl>