<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GridDemo">
    <Grid RowDefinitions="*,*" ColumnDefinitions="120,*,Auto">
        <Button Grid.Row="0" Grid.Column="0" Background="Yellow">Top Left</Button>
        <Button Grid.Row="0" Grid.Column="1" Background="Red">Middle Left</Button>
        <Button Grid.Row="1" Grid.Column="2" Background="Green">Bottom Right</Button>
        <Button Grid.Row="1" Grid.Column="1" Background="Blue">Bottom Middle</Button>
    </Grid>
</Window>